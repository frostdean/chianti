{{>layout/header}}
<body>
<div class="jumbotron d-flex align-items-center min-vh-100">
  <div class="container text-center">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <h3 class="display-4 my-4">장소를 검색해 보세요</h3>
        <form id="searchForm" class="" method="get" action="/places">
          <input type="text" class="form-control border-warning" id="searchKeyword" name="keyword" placeholder="🙏 키워드를 입력하세요">
        </form>
        <button class="btn btn-lg text-white btn-warning" id="searchBtn">검색</button>
      </div>
      <div class="col-md-3"></div>
    </div>

    <hr/>
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4 list-group text-center ">
        <a class="lead list-group-item list-group-item-action-warning border-warning bg-warning">🌟 인기 검색어 🌟</a>
        {{#hotKeywords}}
          <a href="/places?keyword={{keyword}}" class="list-group-item list-group-item-action border-warning">{{keyword}} ({{count}}회)</a>
        {{/hotKeywords}}
      </div>
      <div class="col-md-4"></div>
    </div>
  </div>


</div>

</body>


{{>layout/footer}}

<script type="text/javascript">
  $("#searchBtn").click(function () {
    if ($("#searchKeyword").val().trim() != "") {
      $("#searchForm").submit();
    } else {
      alert("키워드를 입력하세요")
    }
  });
</script>
