{{>layout/header}}
<body>
<div class="jumbotron d-flex align-items-center min-vh-100">
  <div class="container text-center">
    <div class="row">
      <div class="col-md-3"></div>
      <div class="col-md-6">
        <h3 class="display-4 my-4">장소를 검색해 보세요</h3>
        <form id="searchForm" class="" method="get" action="/places" onsubmit="return searchFormSubmit()">
          <input type="text" class="form-control border-warning" id="searchKeyword" name="keyword" placeholder="🙏 키워드를 입력하세요">
          {{#errorMsg}}
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
              <strong>{{errorMsg}}</strong>
              <button type="button" class="close" data-dismiss="alert" aria-label="Close">
                <span aria-hidden="true">&times;</span>
              </button>
            </div>
          {{/errorMsg}}

          <button type="submit" class="my-2 btn text-white btn-warning" id="searchBtn">검색</button>
        </form>
      </div>
      <div class="col-md-3"></div>
    </div>

    <hr/>
    <div class="row">
      <div class="col-md-4"></div>
      <div class="col-md-4 list-group text-center ">
        <a class="lead list-group-item list-group-item-action-warning border-warning bg-warning">🌟 인기 검색어 🌟</a>
        {{#hotKeywords}}
          <a href="/places?keyword={{keyword}}" class="list-group-item list-group-item-action border-warning">{{keyword}} ({{count}}회)</a>
        {{/hotKeywords}}
      </div>
      <div class="col-md-4"></div>
    </div>
  </div>


</div>

</body>


{{>layout/footer}}

<script type="text/javascript">

  function searchFormSubmit() {
    if ($("#searchKeyword").val().trim() == "") {
      alert("키워드를 입력하세요")
      return false
    }
  }
</script>
